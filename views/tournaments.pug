extends layout

block content
  h1= title

  div.container-fluid
    div.row 
      each tournament, index in results
        div.col-sm-2
          h4 #{tournament.name}
          p Year: #{tournament.year}
          p Location: #{tournament.location}
          button(onclick=`buy(${index})`) Buy

  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
