extends layout

block content
  h1= title

  div.text-right
    button.btn.btn-success(style="float: right", onclick=`window.location.href='/tournaments/create'`) Add tournament

  div.container-fluid
    div.row 
      each tournament, index in results
        div.col-sm-2
          h4 #{tournament.name}
          p Year: #{tournament.year}
          p Location: #{tournament.location}

          // Buttons to view, update, delete, or buy each tournament - Assignment 13 Part 6
          div.text-center
            button.btn.btn-info(onclick=`window.location.href='/tournaments/detail?id=${tournament._id}'`) Inspect
            button.btn.btn-warning(onclick=`window.location.href='/tournaments/update?id=${tournament._id}'`) Update
            button.btn.btn-danger(onclick=`window.location.href='/tournaments/delete?id=${tournament._id}'`) Delete
            button(onclick=`buy(${index})`) Buy

  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
